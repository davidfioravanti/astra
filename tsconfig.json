{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react-jsx",
        "allowJs": false,
        "types": ["node", "react", "react-router-dom", "@types/jest"],
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "lib": [
            "es2019",
            "dom",
            "dom.iterable"
        ]
    },
    "moduleDirectories": [
        "node_modules",
        "assets"
    ],
    "exclude": [
        "./node_modules",
        "dist"
    ],
    "include": [
        "src"
    ]
}